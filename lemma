#!/usr/bin/env lua
---
-- The Lemma REPL
---

-- TODO: more special forms?

require 'exec'
LEMMA_VERSION = 0.1

---
-- Execute command line argument or start a REPL
---
local f = ...
local prompt

function update_prompt()
	prompt = lemma['*ns*']..'> '
end

if not f then
	f = io.input()
	update_prompt()
	print('Lemma '..LEMMA_VERSION..' (on '.. _VERSION..')')
end

stdlib()
exec(f, prompt)
